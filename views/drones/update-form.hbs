<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>UPDATE THE DRONE</h1>

            <hr>

            <form action="/drones/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                    </div>
                   
                <div class="mb-3">
                    <label for="propellers" class="form-label">PROPELLERS</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">MAXSPEED</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <button type="submit" class="btn btn-dark">SAVE EDITION</button>
                <a href="/" class="btn btn-dark">HOME</a>
            </form>


            <hr>

        </div>
    </div>


</div>