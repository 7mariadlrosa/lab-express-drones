<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>CREATE A NEW DRONE</h1>

            <hr>

            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="name" name="name">
                    
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">PROPELLERS</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">MAXSPEED</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">CREATE NEW DRONE</button>
                <a href="/" class="btn btn-dark">HOME</a>
            </form>


            <hr>

        </div>
    </div>


</div>
